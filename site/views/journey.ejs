<% include partials/header %>

<!-- Extra Stylesheets -->
<link rel="stylesheet" href="/styles/journey.css" type="text/css"></link>
<!-- Extra Scripts -->
<script src="/scripts/pages/journey.js" defer="defer" type="text/javascript"></script>

<% include partials/navbar_fn %>

<div class="page_content">
  <div class="container">
    <% if(success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
    <% } %>
  </div>
  <!-- Paths -->
  <div class="container">
    <div class="learning_journey text-center">
      <!-- Choose Content -->
      <h1 class="journey_title">Your Learning Journey</h1>
      <!-- Carousel of available content in journey -->
      <div class="journey_carousel_container">
        <div id="journey_carousel" class="carousel slide" data-ride="carousel" data-interval="false">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <object class="journey_item_bg" data="<%= im0 %>" type="image/svg+xml">Journey Item 1</object>
              <div class="carousel-caption d-none d-md-block">
                <h5>First Content</h5>
                <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                <a href="/content/<%= c0 %>"><button type="button" class="btn btn-warning">View</button></a>
              </div>
            </div>
            <div class="carousel-item">
              <object class="journey_item_bg" data="<%= im1 %>" type="image/svg+xml">Journey Item 2</object>
              <div class="carousel-caption d-none d-md-block">
                <h5>Second Content</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <a href="/content/<%= c1 %>"><button type="button" class="btn btn-warning">View</button></a>
              </div>
            </div>
            <div class="carousel-item">
              <object class="journey_item_bg" data="<%= im2 %>" type="image/svg+xml">Journey Item 3</object>
              <div class="carousel-caption d-none d-md-block">
                <h5>Third Content</h5>
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                <a href="/content/<%= c2 %>"><button type="button" class="btn btn-warning">View</button></a>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#journey_carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#journey_carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
