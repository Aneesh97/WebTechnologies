<% include partials/header %>

<!-- Extra Stylesheets -->
<link rel="stylesheet" href="/styles/pass_checks.css" type="text/css"></link>
<!-- Extra Scripts -->
<script src="/scripts/checks.js" defer="defer" type="text/javascript"></script>
<script src="/scripts/reg.js" defer="defer" type="text/javascript"></script>

<% include partials/navbar_ld %>

<div class="page_content">
  <div class="container">
    <h1 class="card-title display-4">Start becoming more self-aware</h1>
    <form method="POST" action="/register">
      <div class="form_group">
        <input type="email" class="form-control" id="register_email" aria-describedby="emailHelp" placeholder="Email"></input>
      </div>
      <div class="form_group">
        <input type="password" class="form-control" id="pass_to_check" aria-describedby="passHelp" placeholder="Password"></input>
        <div class="pass_checks row text-center">
          <div class="col">
            <p class="small form-text text-muted 8long">8 characters long</p>
          </div>
          <div class="col">
            <p class="small form-text text-muted 1Lower">one lowercase letter</p>
          </div>
          <div class="col">
            <p class="small form-text text-muted 1Upper">one uppercase letter</p>
          </div>
          <div class="col">
            <p class="small form-text text-muted 1Number">one number</p>
          </div>
        </div>
      </div>
      <!-- <div class="form_group">
        <input type="password" class="form-control" id="repeat_password" placeholder="Confirm Password"></input>
      </div> -->
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="signup_data_consent"></input>
        <label class="form-check-label" for="signup_data_consent">I consent to receiving occasional emails</label>
      </div>
      <div class="form-group reg_button">
        <button type="button" class="btn btn-lg btn-warning register">Register</button>
      </div>
    </form>
  </div>
</div>

<% include partials/footer %>
