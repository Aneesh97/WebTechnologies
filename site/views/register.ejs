<% include partials/header %>

<!-- Extra Stylesheets -->
<link rel="stylesheet" href="/styles/pass_checks.css" type="text/css"></link>
<!-- Extra Scripts -->
<script src="/scripts/checks.js" defer="defer" type="text/javascript"></script>
<script src="/scripts/pages/register.js" defer="defer" type="text/javascript"></script>

<% include partials/navbar_ld %>

<div class="page_content">
  <div class="container">
    <h1 class="card-title display-4">Start becoming more self-aware</h1>

    <form action="/register" method="POST">
      <div class="form_group">
        <input type="text" name="username" class="form-control" placeholder="Username"></input>
      </div>
      <div class="form_group">
        <input type="password" id="pass_to_check" name="password" class="form-control" placeholder="Password"></input>
      </div>

      <div class="pass_checks row text-center">
        <div class="col">
          <p class="small form-text text-muted 8long">8 characters long</p>
        </div>
        <div class="col">
          <p class="small form-text text-muted 1Lower">1 lowercase letter</p>
        </div>
        <div class="col">
          <p class="small form-text text-muted 1Upper">1 uppercase letter</p>
        </div>
        <div class="col">
          <p class="small form-text text-muted 1Number">1 number</p>
        </div>
      </div>

      <div class="form_group">
        <input type="password" name="conf_password" class="form-control" placeholder="Confirm Password"></input>
      </div>

      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="signup_data_consent"></input>
        <label class="form-check-label" for="signup_data_consent">I consent to receiving occasional emails</label>
      </div>

      <button type="submit" class="btn btn-lg btn-warning register">Register</button>
    </form>

  </div>
</div>

<% include partials/footer %>
